#include <stdio.h>
#include <stdlib.h>

#define rows 7
#define columns 5

int main()
{
	int i;

	int a, b;

	b = 0;

	int** p = (int*)malloc(rows * sizeof(int*));

	for (int i = 0; i < rows; i++)
		p[i] = (int*)malloc(columns * sizeof(int));

	for (i = 0; i < rows; i++) {
		for (a = 0; a < columns; a++) {
			p[i][a] = b;
			printf("%d ", p[i][a]);
			b += 1;
		}
		printf("\n");
	}

	for (i = 0; i < columns; i++)
		free (p[i]);
	free (p);
}
